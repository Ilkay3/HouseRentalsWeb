<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HouseRentals</title>

    <!-- Google Fonts - ЛУКСОЗНИ -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- AOS Animation (за елегантни анимации) -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <!-- Custom CSS -->
<link rel="stylesheet" href="~/HouseRentals.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: linear-gradient(135deg, #1a2b3c 0%, #2c3e50 100%); border-bottom: 2px solid #c9a52c;">
            <div class="container">
                <!-- Лого -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.8rem; color: #c9a52c !important;">
                    <i class="bi bi-building" style="color: #c9a52c;"></i> House<span style="color: #d4af37;">Rentals</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" 
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <!-- ЛЯВО МЕНЮ -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" 
                               asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Начало
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Houses" && ViewContext.RouteData.Values["action"]?.ToString() != "MyHouses" ? "active" : "")" 
                               asp-controller="Houses" asp-action="Index">
                                <i class="bi bi-building"></i> Обяви
                            </a>
                        </li>

                        @if (User.IsInRole("Owner") || User.IsInRole("Administrator"))
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-white @(ViewContext.RouteData.Values["action"]?.ToString() == "MyHouses" ? "active" : "")" 
                                       asp-controller="Houses" asp-action="MyHouses">
                                        <i class="bi bi-house-heart"></i> Моите
                                    </a>
                                </li>
                        }

                        @if (User.IsInRole("Administrator"))
                        {
                                <li class="nav-item dropdown">
                                    <a class="nav-link text-white dropdown-toggle" href="#" id="adminDropdown" role="button" 
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-shield-lock"></i> Админ
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users"><i class="bi bi-people"></i> Потребители</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="AllHouses"><i class="bi bi-building"></i> Всички обяви</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Roles"><i class="bi bi-tags"></i> Роли</a></li>
                                    </ul>
                                </li>
                        }

                        @if (User.IsInRole("Owner"))
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-success" asp-controller="Houses" asp-action="Create">
                                        <i class="bi bi-plus-circle"></i> Добави
                                    </a>
                                </li>
                        }
                    </ul>

                    <!-- ТЪРСАЧКА - ЦЕНТРИРАНА -->
                    <form class="d-flex mx-3" asp-controller="Houses" asp-action="Index" method="get" style="width: 280px;">
                        <div class="input-group">
                            <input type="text" name="searchAddress" class="form-control form-control-sm" 
                                   placeholder="Търси по адрес или град..." 
                                   style="background: rgba(255,255,255,0.15); border: 1px solid rgba(255,255,255,0.3); color: white; border-radius: 30px 0 0 30px;">
                            <button class="btn btn-sm" type="submit" 
                                    style="background: #c9a52c; border: none; border-radius: 0 30px 30px 0; padding: 0.375rem 1rem;">
                                <i class="bi bi-search" style="color: white;"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Login Partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Основно съдържание -->
    <main class="container py-4">
        @if (TempData["SuccessMessage"] != null)
        {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
        }

        @if (TempData["WarningMessage"] != null)
        {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-circle-fill"></i> @TempData["WarningMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer border-top py-2">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center small">
                <span><i class="bi bi-house-heart-fill text-primary"></i> HouseRentals</span>
                <span>
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none mx-2">Начало</a> |
                    <a asp-controller="Houses" asp-action="Index" class="text-decoration-none mx-2">Обяви</a>
                </span>
                <span>&copy; @DateTime.Now.Year</span>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true,
            easing: 'ease-out-cubic'
        });
    </script>
</body>
</html>