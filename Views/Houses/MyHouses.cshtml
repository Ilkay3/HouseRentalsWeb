@model IEnumerable<HouseRentals.Models.House>

@{
    ViewData["Title"] = "Моите обяви";
    var isAdmin = User.IsInRole("Administrator");
}

<div class="container mt-4" data-aos="fade-up">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6" style="font-family: 'Playfair Display', serif;">
            <i class="bi bi-house-heart"></i> @ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Нова обява
        </a>
    </div>

    @if (!Model.Any())
    {
            <div class="alert alert-info text-center py-5" data-aos="fade-up">
                <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
                <h4 class="mt-3">Все още нямате обяви</h4>
                <p>Кликнете на бутона "Нова обява", за да добавите първия си имот.</p>
                <a asp-action="Create" class="btn btn-success mt-2">
                    <i class="bi bi-plus-circle"></i> Добави обява
                </a>
            </div>
    }
    else
    {
            <div class="row">
            @foreach (var item in Model)
            {
                        <div class="col-md-6 col-lg-4 mb-4" data-aos="fade-up" data-aos-delay="@(100 * Model.ToList().IndexOf(item))">
                            <div class="card h-100">
                        @if (!item.Available)
                        {
                                        <div class="position-absolute top-0 end-0 m-2">
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-person-check"></i> Заета
                                            </span>
                                        </div>
                        }

                                <div class="card-body">
                                    <h5 class="card-title" style="font-family: 'Playfair Display', serif;">
                                @item.Address
                                    </h5>

                                    <p class="card-text text-muted small">
                                        <i class="bi bi-geo-alt"></i> @(item.City?.Name ?? "Без град")
                                    </p>

                                    <p class="card-text">
                                @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                                    </p>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <span class="h5 text-success">
                                            <strong>@item.Price_Per_Month.ToString("C")</strong>
                                            <small class="text-muted">/месец</small>
                                        </span>

                                        <span class="badge @(item.Available ? "bg-success" : "bg-secondary")">
                                    @(item.Available ? "Свободна" : "Заета")
                                        </span>
                                    </div>

                            @if (!item.Available && item.Tenant != null)
                            {
                                            <div class="mt-2 small text-muted">
                                                <i class="bi bi-person"></i> Наемател: @item.Tenant.First_Name @item.Tenant.Last_Name
                                            </div>
                            }
                                </div>

                                <div class="card-footer bg-transparent border-top-0">
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Details" asp-route-id="@item.HouseId" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> Детайли
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.HouseId" 
                                           class="btn btn-outline-warning btn-sm">
                                            <i class="bi bi-pencil"></i> Редакция
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.HouseId" 
                                           class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Изтрий
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
            </div>
    }
</div>