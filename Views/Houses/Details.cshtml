@model HouseRentals.Models.House
@using Microsoft.AspNetCore.Identity
@using HouseRentals.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "House Details";

    var isAdmin = User.IsInRole("Administrator");
    var isOwner = User.IsInRole("Owner");
    var isTenant = User.IsInRole("Tenant");

    var userId = UserManager.GetUserId(User);

    var isOwnerOfHouse = Model.Owner?.ApplicationUserId == userId;
    var isTenantOfHouse = Model.Tenant?.ApplicationUserId == userId;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">

                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="bi bi-building"></i> @ViewData["Title"]
                    </h2>
                    <span class="badge @(Model.Available ? "bg-success" : "bg-warning text-dark") fs-6">
                        @(Model.Available ? "СВОБОДНА" : "ЗАЕТА")
                    </span>
                </div>

                <div class="card-body">

                    <!-- Адрес -->
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="border-bottom pb-2">📍 Адрес</h4>
                            <p><strong>Адрес:</strong> @Model.Address</p>
                            <p>
                                <strong>Град:</strong>
                                @(Model.City != null ? Model.City.Name : "Не е посочен")
                            </p>
                        </div>

                        <!-- Цена -->
                        <div class="col-md-6">
                            <h4 class="border-bottom pb-2">💰 Цена</h4>
                            <p>
                                <span class="h4 text-success">
                                    @Model.Price_Per_Month.ToString("F2") €
                                </span>
                                / месец
                            </p>
                            <p>
                                @if (Model.Available)
                                {
                                        <span class="badge bg-success">Достъпна за наемане</span>
                                }
                                else
                                {
                                        <span class="badge bg-secondary">В момента е под наем</span>
                                }
                            </p>
                        </div>
                    </div>

                    <!-- Описание -->
                    <div class="mt-4">
                        <h4 class="border-bottom pb-2">📝 Описание</h4>
                        <p>@Model.Description</p>
                    </div>

                    <!-- Собственик -->
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h4 class="border-bottom pb-2">👤 Собственик</h4>

                            <p>
                                <strong>Име:</strong>
                                @Model.Owner.First_Name @Model.Owner.Last_Name
                            </p>

                            <p>
                                <strong>Телефон:</strong>
                                <a href="tel:@Model.Owner.ApplicationUser.PhoneNumber">
                                    @Model.Owner.ApplicationUser.PhoneNumber
                                </a>
                            </p>

                            <p>
                                <strong>Email:</strong>
                                <a href="mailto:@Model.Owner.ApplicationUser.Email">
                                    @Model.Owner.ApplicationUser.Email
                                </a>
                            </p>
                        </div>

                        <!-- Наемател -->
                        @if (!Model.Available && Model.Tenant != null)
                        {
                                <div class="col-md-6">
                                    <h4 class="border-bottom pb-2">👥 Наемател</h4>

                                    <p>
                                        <strong>Име:</strong>
                                    @Model.Tenant.First_Name @Model.Tenant.Last_Name
                                    </p>

                                    <p>
                                        <strong>Телефон:</strong>
                                        <a href="tel:@Model.Tenant.ApplicationUser.PhoneNumber">
                                        @Model.Tenant.ApplicationUser.PhoneNumber
                                        </a>
                                    </p>

                                    <p>
                                        <strong>Email:</strong>
                                        <a href="mailto:@Model.Tenant.ApplicationUser.Email">
                                        @Model.Tenant.ApplicationUser.Email
                                        </a>
                                    </p>
                                </div>
                        }
                    </div>

                    <!-- Удобства -->
                    @if (Model.HouseAmenities != null && Model.HouseAmenities.Any())
                    {
                            <div class="mt-4">
                                <h4 class="border-bottom pb-2">✨ Удобства</h4>
                                <div class="d-flex flex-wrap gap-2">
                                @foreach (var ha in Model.HouseAmenities)
                                {
                                            <span class="badge bg-info text-dark">
                                        @ha.Amenity.Name
                                            </span>
                                }
                                </div>
                            </div>
                    }

                </div>

                <!-- Footer -->
                <div class="card-footer bg-transparent d-flex justify-content-between">

                    <div>

                        @if (isAdmin || isOwnerOfHouse)
                        {
                                <a asp-action="Edit"
                                   asp-route-id="@Model.HouseId"
                                   class="btn btn-warning">
                                    Редактирай
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@Model.HouseId"
                                   class="btn btn-danger ms-2">
                                    Изтрий
                                </a>
                        }

                        @if (isTenant && Model.Available)
                        {
                                <form asp-action="Rent" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.HouseId" />
                                    <button type="submit" class="btn btn-success ms-2">
                                        Наеми
                                    </button>
                                </form>
                        }

                        @if (!Model.Available && (isTenantOfHouse || isAdmin))
                        {
                                <form asp-action="StopRent" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.HouseId" />
                                    <button type="submit" class="btn btn-secondary ms-2">
                                        Освободи
                                    </button>
                                </form>
                        }

                    </div>

                    <a asp-action="Index" class="btn btn-outline-primary">
                        Обратно
                    </a>

                </div>

            </div>
        </div>
    </div>
</div>
