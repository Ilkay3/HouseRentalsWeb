@model HouseRentals.Models.House
@using Microsoft.AspNetCore.Identity
@using HouseRentals.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
    var isAdmin = User.IsInRole("Administrator");
    var userId = UserManager.GetUserId(User);
    var currentOwner = ViewBag.CurrentOwner as Owner;
}

<h1>Create New House</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (isAdmin)
            {
                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Избери собственик</label>
                        <select name="selectedOwnerId" class="form-control" asp-items="ViewBag.OwnerList">
                            <option value="">-- Избери собственик --</option>
                        </select>
                        <span class="text-danger">@ViewBag.OwnerError</span>
                    </div>
            }
            else
            {
                    <div class="alert alert-info">
                        <strong>Създаваш обява като:</strong> 
                    @(currentOwner?.First_Name ?? "") @(currentOwner?.Last_Name ?? "")
                        <input type="hidden" name="selectedOwnerId" value="@currentOwner?.OwnerId" />
                    </div>
            }

            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label fw-bold"></label>
                <input asp-for="Address" class="form-control" placeholder="ул. Централна 15" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control" rows="3" 
                          placeholder="Просторен апартамент с две спални, тераса и гараж..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price_Per_Month" class="control-label fw-bold"></label>
                <div class="input-group">
                    <input asp-for="Price_Per_Month" class="form-control" placeholder="500" />
                    <span class="input-group-text">euro.</span>
                </div>
                <span asp-validation-for="Price_Per_Month" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CityId" class="control-label fw-bold">Град</label>
                    <select asp-for="CityId"
                                class="form-control"
                            asp-items="ViewBag.CityList">
                        <option value="">-- Избери град --</option>
                    </select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Създай обява
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Назад
                </a>
            </div>
        </form>
    </div>

    @if (isAdmin)
    {
            <div class="col-md-5 offset-md-1">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Създаване от администратор</h5>
                    </div>
                    <div class="card-body">
                        <p>Като администратор можеш да създаваш обяви от името на всеки собственик.</p>
                        <p>Избери собственик от падащото меню и попълни детайлите за имота.</p>
                        <hr />
                        <h6>Нямаш нужен собственик?</h6>
                        <a asp-controller="Admin" asp-action="CreateOwner" class="btn btn-sm btn-outline-primary">
                            Създай нов собственик
                        </a>
                    </div>
                </div>
            </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @if (isAdmin)
    {
                <script>
                    $(document).ready(function() {
                        // Добавяне на клас за стил на select
                        $('select[name="selectedOwnerId"]').addClass('form-select');

                        // Валидация преди submit
                        $('form').on('submit', function(e) {
                            var ownerSelect = $('select[name="selectedOwnerId"]');
                            if (ownerSelect.length && !ownerSelect.val()) {
                                e.preventDefault();
                                alert('Моля, избери собственик!');
                            }
                        });
                    });
                </script>
    }
}