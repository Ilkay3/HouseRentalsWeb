@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="mb-0">
                        <i class="bi bi-box-arrow-in-right"></i> @ViewData["Title"]
                    </h2>
                </div>

                <div class="card-body p-4">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                                   aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Имейл</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" 
                                   aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Парола</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Запомни ме
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Вход
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="mb-1">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                    Нямате профил? Регистрирайте се
                                </a>
                            </p>
                            <p class="mb-1">
                                <a asp-page="./ForgotPassword" class="text-decoration-none small">
                                    Забравена парола?
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="card-title text-center">Вход с външен услуги</h5>
                            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                                <i class="bi bi-@provider.Name.ToLower()"></i> Вход с @provider.DisplayName
                                            </button>
                                }
                                </div>
                            </form>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}