@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="mb-0">
                        <i class="bi bi-person-plus"></i> @ViewData["Title"]
                    </h2>
                </div>

                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                                   aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Имейл</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" 
                                   aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Парола</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            <small class="form-text text-muted">Минимум 6 символа</small>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" 
                                   aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword">Потвърдете паролата</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <i class="bi bi-person-badge"></i> Изберете тип профил
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" 
                                                   asp-for="Input.UserRole" value="Owner" id="roleOwner" />
                                            <label class="form-check-label fw-bold" for="roleOwner">
                                                <i class="bi bi-house-door text-primary"></i> Собственик
                                            </label>
                                            <small class="d-block text-muted">Можете да давате имоти под наем</small>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" 
                                                   asp-for="Input.UserRole" value="Tenant" id="roleTenant" />
                                            <label class="form-check-label fw-bold" for="roleTenant">
                                                <i class="bi bi-person text-success"></i> Наемател
                                            </label>
                                            <small class="d-block text-muted">Търсите имот под наем</small>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.UserRole" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-check"></i> Регистрация
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="mb-0">
                                Вече имате профил? 
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                    Вход
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                    <div class="card mt-3">
                        <div class="card-body">
                            <h5 class="card-title text-center">Регистрация с външни услуги</h5>
                            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                                <i class="bi bi-@provider.Name.ToLower()"></i> Регистрация с @provider.DisplayName
                                            </button>
                                }
                                </div>
                            </form>
                        </div>
                    </div>
            }
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}